{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": ".",
    "outDir": "./lib/esm",
    "declarationDir": "./lib/esm/types",
    "lib": [
      "ES2023",
      "DOM"
    ],
    "moduleResolution": "NodeNext",
    "module": "NodeNext",
    "target": "ESNext",
    "esModuleInterop": true,
    "noEmit": false,
    "resolveJsonModule": true,
    "allowJs": false,
    "checkJs": false,
    "noImplicitAny": true,
    "strict": true
  }
}
