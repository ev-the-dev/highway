{
  "extends": "@tsconfig/node18/tsconfig.json",
  "compilerOptions": {
    "moduleResolution": "nodenext",
    "module": "nodenext",
    "target": "ES6",
    "esModuleInterop": true,
    "paths": {
      "/opt/nodejs/*": [
        "layers/base-layer/nodejs/*"
      ]
    },
    "skipLibCheck": true,
    "noEmit": true,
    "declaration": true,
    "declarationMap": true,
    "resolveJsonModule": true,
    "allowJs": false,
    "checkJs": false,
    "noImplicitAny": true,
  }
}
